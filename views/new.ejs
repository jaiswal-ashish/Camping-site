<% include partials/yelphead %>

<div class="container">
    <h1 style="text-align: center">Create a new Campsite</h1>
    <div style="width: 50%; margin: 25px auto">
        <form action="/campgrounds" method="POST" > 
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Name" name="name" id="">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" placeholder="Price" name="price" min="0" step="1" id="">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Image url" name="image" id="">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Description" name="description" id="">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

