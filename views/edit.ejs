<% include partials/yelphead %>

<div class="container">
    <h1 style="text-align: center">Edit: <%= campground.name %></h1>
    <div style="width: 50%; margin: 25px auto">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" > 
            <div class="form-group">
                <input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]" id="">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" value="<%= campground.price %>" name="campground[price]" min="0" step="1" id="">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" value="<%= campground.image %>" name="campground[image]" id="">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" value="<%= campground.description %>" name="campground[description]" id="">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include partials/yelpfoot %>